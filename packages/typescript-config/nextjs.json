{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@/*": [
        "../../apps/archive-webapp/src/*",
        "../../apps/archive-manager/src/*"
      ],
      "~/*": ["../../*"]
    }
  }
}
